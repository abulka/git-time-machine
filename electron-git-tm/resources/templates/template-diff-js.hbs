function jumpTo(filePath, lineNum) {
  const cmd = { 
    command: 'jump_to_file', 
    filePath: filePath, 
    lineNum: lineNum 
  }
  window.parent.postMessage(cmd)
}

document.addEventListener('DOMContentLoaded', () => {
  let theDiff = `{{{diff_body}}}`;
